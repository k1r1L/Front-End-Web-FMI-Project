<main>
    <div class="container">
        <div class="row">
            <h2 class="m-1">All Games &ndash;&nbsp;</h2>
            <a href="/admin/add" class="btn btn-warning m-1">
                <strong>+</strong> Add Game
            </a>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each games}}
                        <tr class="table-warning">
                            <th scope="row">{{this.order}}</th>
                            <td>{{this.title}}</td>
                            <td>{{this.size}} GB</td>
                            <td>{{this.price}} &euro;</td>
                            <td>
                                <a href="/admin/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/admin/delete/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</main>